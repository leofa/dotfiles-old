DIR="${BLOCK_INSTANCE:-$HOME}"
ALERT_LOW="${100:-20}" # color will turn red above this value (default: 80%)

usage=$(df -h -P -l "$DIR" | awk -v alert_low=$ALERT_LOW '
/\/.*/ {
	print $5
	use=$5
	# no need to continue parsing
	exit 0
}

END {
	gsub(/%$/,"",use)
	if (100 - use < alert_low) {
		# color
		print "#CC6666"
	}}')

echo "<span foreground='#87AFAF' >ï‚  </span>$usage"

case $BLOCK_BUTTON in
 1) i3-msg exec rofi-find ;; #left click, locate +xdg-open files with rofi
 2) i3-msg exec caja ;; #right click, open filemanager 
 3) i3-msg exec 'caja --browser' #middle click, open filemanager
esac
